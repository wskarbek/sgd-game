IDIR = include
LDIR = lib
ODIR = build
SDIR = src

LIBS=lmingw32 -lSDL2main -lSDL2

CC=g++
CFLAGS=-I$(IDIR) -L$(LDIR) -w -std=c++14

_DEPS = World.h
DEPS = $(patsubst %,$(IDIR)/%,$(_DEPS))

_OBJ = World.o main.o
OBJ = $(patsubst %,$(ODIR)/%,$(_OBJ))

$(ODIR)/%.o: $(SDIR)/%.cpp $(DEPS)
	$(CC) -c -o $@ $< $(CFLAGS)

build/game: $(OBJ)
	$(CC) $@ $^ $(CFLAGS) $(LIBS)